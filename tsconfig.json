{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "lib": ["es6", "esnext", "es2017", "es2019"],

    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "types": ["node", "jest", "styled-components-react-native"],
    "paths": {
      "@YaraPlus/*": ["./src/*"],
      "@modules/*": ["./modules/*"]
    }
  },
  "include": ["src", "modules"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
